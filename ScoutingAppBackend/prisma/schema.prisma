// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js" // Check this
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5432/mydb?schema=sample"
}

model Tournament {
  id      Int     @id @default(autoincrement())
  title   String  @unique
  matches Match[]
}

model Match {
  id Int @id @default(autoincrement())
  matchNumber  Int
  teams        TeamPerformance[]
  tournament   Tournament?       @relation(fields: [tournamentId], references: [id])
  tournamentId Int?

  @@unique(fields: [matchNumber, tournamentId], name: "uniqueMatchId")
}

model TeamPerformance {
  id         Int    @id @default(autoincrement())
  teamNumber Int
  booleanScoutInput Boolean[]
  intScoutInput Int[]
  stringScoutInput String[]
  match      Match?  @relation(fields: [matchId], references: [id])
  matchId    Int?
}
